        local codesToRedeem = {"Release", "SorryForDelay", "SorryForShutdown"}

        for _, code in ipairs(codesToRedeem) do
            redeemCode(code)
            wait(2) -- ƒê·ª£i 2 gi√¢y ƒë·ªÉ tr√°nh spam server
