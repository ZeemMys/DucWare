local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()
local SaveManager = loadstring(game:HttpGet("https://raw.githubusercontent.com/dawid-scripts/Fluent/master/Addons/SaveManager.lua"))()
local InterfaceManager = loadstring(game:HttpGet("https://raw.githubusercontent.com/dawid-scripts/Fluent/master/Addons/InterfaceManager.lua"))()

local Window = Fluent:CreateWindow({
    Title = "DucWare",
    SubTitle = "by Duck",
    TabWidth = 160,
    Size = UDim2.fromOffset(570, 440), -- rộng,dài
    Acrylic = true, -- The blur may be detectable, setting this to false disables blur entirely
    Theme = "Darker",
    MinimizeKey = Enum.KeyCode.LeftControl -- Used when theres no MinimizeKeybind
})

local Tabs = {
    Lobby = Window:AddTab({ Title = "Lobby", Icon = "box" }),
    Settings = Window:AddTab({ Title = "Settings", Icon = "settings" })
}

-----------Lobby---------
-- Setup
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local SellRemote = ReplicatedStorage:WaitForChild("Event"):WaitForChild("Sell")

-- Dropdown và Toggle (ví dụ bạn tạo rồi)
local SelectedRarities = {}  -- Danh sách độ hiếm được chọn từ dropdown

-- Hàm này được gọi khi dropdown thay đổi
local function UpdateSelectedRarities(selected)
	SelectedRarities = selected  -- selected là 1 table {"Common", "Rare"}
end

-- Gọi hàm mỗi khi người dùng chọn độ hiếm mới
-- RarityDropdown.OnChanged(UpdateSelectedRarities) -- Bạn kết nối như vầy nếu có hệ thống Component sẵn

-- Toggle
local AutoSellToggle = Toggle:New("AutoSell", {
	Title = "Auto Sell",
	Default = false,
	Callback = function(isEnabled)
		if isEnabled then
			print("Auto Sell Enabled with rarities:", table.concat(SelectedRarities, ", "))
			SellRemote:FireServer(SelectedRarities)  -- Gửi table {"Common", "Rare", ...}
		else
			print("Auto Sell Disabled")
		end
	end,
})
