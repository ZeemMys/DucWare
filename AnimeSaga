-- G·ª≠i m√£ v√† ki·ªÉm tra ph·∫£n h·ªìi
local function redeemCode(code)
    print("ƒêang redeem m√£:", code)
    local success, response = pcall(function()
        game:GetService("ReplicatedStorage"):WaitForChild("Event"):WaitForChild("Codes"):FireServer(code)
    end)

    if success then
        -- L·∫Øng nghe ph·∫£n h·ªìi t·ª´ server
        game:GetService("ReplicatedStorage"):WaitForChild("Event"):WaitForChild("Codes").OnClientEvent:Connect(function(response)
            print("Ph·∫£n h·ªìi t·ª´ server:", response)
            if response == "Th√†nh c√¥ng" then
                Rayfield:Notify({
                    Title = "‚úÖ M√£ h·ª£p l·ªá",
                    Content = "M√£ " .. code .. " ƒë√£ redeem th√†nh c√¥ng!",
                    Duration = 3
                })
            else
                Rayfield:Notify({
                    Title = "‚ùå L·ªói",
                    Content = "C√≥ l·ªói khi redeem m√£ " .. code .. ".",
                    Duration = 3
                })
            end
        end)
    else
        Rayfield:Notify({
            Title = "‚ùå L·ªói",
            Content = "L·ªói khi g·ª≠i m√£: " .. tostring(response),
            Duration = 3
        })
    end
end

-- Button ƒë·ªÉ redeem t·∫•t c·∫£ m√£ code
LobbyTab:CreateButton({
    Name = "Redeem All Codes",
