    end)

    if success then
        -- L·∫Øng nghe ph·∫£n h·ªìi t·ª´ server
        game:GetService("ReplicatedStorage").Event.Codes.OnClientEvent:Connect(function(response)
            if response == "Th√†nh c√¥ng" then
