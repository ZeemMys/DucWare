-- Khai b√°o l·∫°i h√†m redeem ri√™ng ngo√†i callback
local function redeemCode(code)
    -- X√≥a kho·∫£ng tr·∫Øng + chu·∫©n h√≥a chu·ªói
    code = tostring(code):gsub("^%s*(.-)%s*$", "%1")
    print("üì® Redeeming code:", "[" .. code .. "]")

    local success, err = pcall(function()
        game:GetService("ReplicatedStorage").Event.Codes:FireServer(code)
    end)

    if success then
        Rayfield:Notify({
            Title = "‚úÖ Th√†nh c√¥ng",
            Content = "ƒê√£ g·ª≠i m√£: " .. code,
            Duration = 3
        })
    else
        Rayfield:Notify({
            Title = "‚ùå L·ªói",
            Content = "Kh√¥ng g·ª≠i ƒë∆∞·ª£c m√£: " .. code .. "\n" .. tostring(err),
            Duration = 3
        })
    end
end

-- Danh s√°ch m√£
local codeList = {"Release", "SorryForDelay", "SorryForShutdown"}

LobbyTab:CreateButton({
    Name = "Redeem All Codes (Fixed Execution)",
    Callback = function()
        task.spawn(function() -- ch·∫°y trong thread ƒë·ªôc l·∫≠p
            for _, code in ipairs(codeList) do
                redeemCode(code)
                task.wait(1.5)
            end

            Rayfield:Notify({
                Title = "üéâ Xong r·ªìi!",
                Content = "ƒê√£ th·ª≠ redeem to√†n b·ªô m√£.",
                Duration = 4
            })
        end)
    end
})
