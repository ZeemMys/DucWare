local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()  -- Load Rayfield Library

local Window = Rayfield:CreateWindow({
    Name = "DucWare - Anime Saga",
    Icon = 0, -- Icon in Topbar. Set to 0 for no icon.
    LoadingTitle = "Loading Script...",
    LoadingSubtitle = "by DucWare",
    Theme = "Amethyst", -- Theme choice for Rayfield
    DisableRayfieldPrompts = false,
    DisableBuildWarnings = false,
    ConfigurationSaving = {
        Enabled = true,
        FolderName = "DucWare",
        FileName = "config"
    }
})

-- Tạo một Tab trong cửa sổ
local LobbyTab = Window:CreateTab("Lobby", 4483362458)

-- Tạo một Button trong Tab Lobby cho "Redeem All Codes"
LobbyTab:CreateButton({
    Name = "Redeem All Codes",  -- Tên nút bấm
    Callback = function()
        -- Danh sách các mã code
        local codeList = {"Release", "SorryForDelay", "SorryForShutdown"}
        
        -- Lấy sự kiện ReplicatedStorage để gửi mã code
        local ReplicatedStorage = game:GetService("ReplicatedStorage")
        local CodesEvent = ReplicatedStorage:WaitForChild("Event"):WaitForChild("Codes")
        
        -- Gửi các mã code đến server
        for _, code in ipairs(codeList) do
            local success, err = pcall(function()
                CodesEvent:FireServer(code)
            end)

            -- Kiểm tra nếu mã code đã được gửi thành công
            if success then
                Rayfield:Notify({
                    Title = "Code Redeemed",
                    Content = "Mã code '" .. code .. "' đã được nhập thành công.",
                    Duration = 3
                })
            else
                Rayfield:Notify({
                    Title = "Error",
                    Content = "Lỗi khi gửi mã code: " .. code .. "\n" .. err,
                    Duration = 3
                })
            end

            wait(1) -- Delay giữa mỗi lần gửi code
        end
    end
})
