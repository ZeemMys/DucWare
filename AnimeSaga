  
local LobbyTab = Window:CreateTab("Lobby", 4483362458)

------Lobby-------
LobbyTab:CreateButton({
    Name = "Redeem All Codes",
    Callback = function()
        local codes = {"Release", "SorryForDelay", "SorryForShutdown"}

        for _, code in ipairs(codes) do
            -- ⚠️ Giả định là RemoteEvent nằm ở đây:
            local success, err = pcall(function()
                game:GetService("ReplicatedStorage").Event.RedeemCode:FireServer(code)
            end)

            if success then
                Rayfield:Notify({
                    Title = "Code Redeemed",
                    Content = "Đã gửi code: " .. code,
                    Duration = 3
                })
            else
                Rayfield:Notify({
                    Title = "Lỗi",
                    Content = "Không gửi được code: " .. code,
                    Duration = 3
                })
            end

            wait(1)
        end
    end,
})
