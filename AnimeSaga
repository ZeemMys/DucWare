    }
})

Rayfield:Notify({
    Title = "Enjoy",
    Content = "Have Fun :)",
    Duration = 5,
    Image = "number"
})

local LobbyTab = Window:CreateTab("Lobby", 4483362458)

local codeList = {"Release", "SorryForDelay", "SorryForShutdown"}
local redeemedCodes = {}

LobbyTab:CreateButton({
    Name = "Redeem All Codes",
    Callback = function()
        for _, rawCode in ipairs(codeList) do
            -- X·ª≠ l√Ω chu·∫©n h√≥a m√£
            local code = tostring(rawCode):gsub("^%s*(.-)%s*$", "%1") -- x√≥a kho·∫£ng tr·∫Øng ƒë·∫ßu/cu·ªëi
            print("üî• G·ª≠i m√£:", "[" .. code .. "]")

            if not redeemedCodes[code] then
                local success, err = pcall(function()
                    CodesEvent:FireServer(code)
                end)

                if success then
                    redeemedCodes[code] = true
                    Rayfield:Notify({
                        Title = "‚úÖ Th√†nh c√¥ng",
                        Content = "ƒê√£ g·ª≠i m√£: " .. code,
                        Duration = 3
                    })
                else
                    Rayfield:Notify({
                        Title = "‚ùå L·ªói",
                        Content = "Kh√¥ng g·ª≠i ƒë∆∞·ª£c m√£: " .. code .. " (" .. tostring(err) .. ")",
                        Duration = 3
                    })
                end

                task.wait(1.5)
            else
                Rayfield:Notify({
                    Title = "‚è≠Ô∏è B·ªè qua",
                    Content = "M√£ ƒë√£ redeem tr∆∞·ªõc ƒë√≥: " .. code,
                    Duration = 2
                })
            end
        end

        Rayfield:Notify({
            Title = "üéâ Ho√†n t·∫•t",
            Content = "T·∫•t c·∫£ m√£ ƒë√£ x·ª≠ l√Ω xong.",
            Duration = 5
        })
    end
})
