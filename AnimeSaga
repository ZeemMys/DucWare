Rayfield:Notify({
    Title = "Enjoy",
    Content = "Have Fun :)",
    Duration = 5,
    Image = "number"
})

local LobbyTab = Window:CreateTab("Lobby", 4483362458)

-- Danh s√°ch m√£
local codeList = {"Release", "SorryForDelay", "SorryForShutdown"}

-- H√†m redeem ch·∫°y gi·ªëng tay ng∆∞·ªùi d√πng
local function RedeemLikeHuman(code)
    -- chu·∫©n h√≥a
    code = tostring(code):gsub("^%s*(.-)%s*$", "%1")
    print("üí• ƒêang redeem:", code)
    CodesEvent:FireServer(code)
end

-- N√∫t redeem
LobbyTab:CreateButton({
    Name = "üî• Redeem All Codes",
    Callback = function()
        -- ch·∫°y ƒë·ªôc l·∫≠p kh·ªèi UI context
        spawn(function()
            for _, code in ipairs(codeList) do
                RedeemLikeHuman(code)
                Rayfield:Notify({
                    Title = "ƒê√£ g·ª≠i m√£",
                    Content = code,
                    Duration = 2
                })
                wait(1.5)
            end

            Rayfield:Notify({
                Title = "‚úÖ Ho√†n t·∫•t",
                Content = "T·∫•t c·∫£ m√£ ƒë√£ ƒë∆∞·ª£c g·ª≠i.",
                Duration = 5
            })
        end)
    end
})
