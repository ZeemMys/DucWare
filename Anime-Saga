local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
    Name = "DucWare — Anime Saga",
    Icon = 0,
    LoadingTitle = "Wait a minute, the script is loading",
    LoadingSubtitle = "by DucWare",
    Theme = "Amethyst",
    ConfigurationSaving = {
        Enabled = true,
        FolderName = "DucWare",
        FileName = "DucWareZ"
    },
    Discord = {
        Enabled = true,
        Invite = "PnHj485p",
        RememberJoins = false
    },
    KeySystem = true,
    KeySettings = {
        Title = "Get Key",
        Subtitle = "Key System",
        Note = "Key: DucWare",
        FileName = "Key",
        SaveKey = true,
        Key = {"DucWare"}
    }
})

Rayfield:Notify({
    Title = "Enjoy",
    Content = "Have Fun :)",
    Duration = 5,
    Image = 4483362458
})

local LobbyTab = Window:CreateTab("Lobby", 4483362458)
local Game1Tab = Window:CreateTab("Game-Map1", 4483362458)

---------Lobby----------
LobbyTab:CreateButton({
	Name = "✅ Nhập tất cả code qua GUI thật (an toàn)",
	Callback = function()
		local success, err = pcall(function()
			local codes = {
				"Release",
				"SorryForDelay",
				"SorryForShutdown",
				"50KActive",
				"1MVisits"
			}

			local player = game:GetService("Players").LocalPlayer
			local gui = player:WaitForChild("PlayerGui")
			local window = gui:FindFirstChild("Window")
			if not window then error("❌ Không tìm thấy 'Window' trong PlayerGui") end

			local codesGui = window:FindFirstChild("Codes")
			if not codesGui then error("❌ Không tìm thấy 'Codes' trong Window") end

			local codeFrame = codesGui:FindFirstChild("Frame")
			if not codeFrame then error("❌ Không tìm thấy 'Frame' trong Codes") end

			local codeInputFrame = codeFrame:FindFirstChild("code")
			if not codeInputFrame then error("❌ Không tìm thấy 'code' trong Frame") end

			local enterBox = codeInputFrame:FindFirstChild("entercode")
			if not enterBox then error("❌ Không tìm thấy 'entercode' trong code frame") end

			local redeemBtn = codeFrame:FindFirstChild("redeem")
			if not redeemBtn then error("❌ Không tìm thấy 'redeem' button trong Frame") end

			-- Optional: cố gắng hiện GUI nếu đang ẩn (có thể game tự làm)
			if codeFrame:IsA("Frame") then
				codeFrame.Visible = true
			end

			for _, code in ipairs(codes) do
				enterBox.Text = code
				redeemBtn:Activate()
				print("📨 Đã nhập code:", code)
				task.wait(1.2)
			end

			Rayfield:Notify({
				Title = "✅ Thành công!",
				Content = "Tất cả code đã được gửi!",
				Duration = 4
			})
		end)

		if not success then
			warn("❌ Callback Error:", err)
			Rayfield:Notify({
				Title = "❌ Lỗi",
				Content = tostring(err),
				Duration = 5
			})
		end
	end
})

-----------Tab farm 1----------------
local autoFarm = false
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

local function getHRP()
	local char = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()
	return char:FindFirstChild("HumanoidRootPart")
end

local function getTargetMobs()
	local enemyFolder = workspace:WaitForChild("Enemy"):WaitForChild("Mob")
	local mobs = {}

	for _, mob in ipairs(enemyFolder:GetChildren()) do
		local name = mob.Name
		local hrp = mob:FindFirstChild("HumanoidRootPart")
		local hum = mob:FindFirstChild("Humanoid")
		if hrp and hum and hum.Health > 0 then
			if name == "Mist Ninja" or name == "Sand Ninja" then
				table.insert(mobs, mob)
			end
		end
	end

	return mobs
end

Game1Tab:CreateToggle({
	Name = "🌪Auto Farm",
	CurrentValue = false,
	Callback = function(Value)
		autoFarm = Value

		Rayfield:Notify({
			Title = autoFarm and "🟢 Auto Farm BẬT" or "🔴 Auto Farm TẮT",
			Content = autoFarm and "Đang farm map 1..." or "Đã dừng.",
			Duration = 3
		})

		task.spawn(function()
			while autoFarm do
				local mobs = getTargetMobs()

				if #mobs == 0 then
					task.wait(1)
				else
					for _, mob in ipairs(mobs) do
						if not autoFarm then break end

						local mobHRP = mob:FindFirstChild("HumanoidRootPart")
						local hrp = getHRP()

						if mobHRP and hrp then
							-- Bay đến gần đầu mob, cách 2.5 studs
							local targetPos = mobHRP.Position + Vector3.new(0, 2.5, 0)
							hrp.CFrame = CFrame.new(targetPos, mobHRP.Position)

							-- Đợi một tí để hitbox nhân vật chạm
							task.wait(0.2)

							-- Fire tấn công
							local atkRemote = ReplicatedStorage:FindFirstChild("Event") and ReplicatedStorage.Event:FindFirstChild("Attack")
							if atkRemote then
								atkRemote:FireServer(mob)
							end

							-- Đợi mob mất máu hoặc die mới tiếp tục
							local timeout = 0
							while mob:FindFirstChild("Humanoid") and mob.Humanoid.Health > 0 and timeout < 5 do
								task.wait(0.3)
								timeout += 0.3
							end
						end
					end
				end

				task.wait(0.5)
			end
		end)
	end
})
