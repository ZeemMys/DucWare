local Window = Rayfield:CreateWindow({
    Name = "DucWare — Anime Saga",
    Icon = 0,
    LoadingTitle = "Wait a minute, the script is loading",
    LoadingSubtitle = "by DucWare",
    Theme = "Amethyst",
    ConfigurationSaving = {
        Enabled = true,
        FolderName = "DucWare",
        FileName = "DucWareZ"
    },
    Discord = {
        Enabled = true,
        Invite = "PnHj485p",
        RememberJoins = false
    },
    KeySystem = true,
    KeySettings = {
        Title = "Get Key",
        Subtitle = "Key System",
        Note = "Key: DucWare",
        FileName = "Key",
        SaveKey = true,
        Key = {"DucWare"}
    }
})

Rayfield:Notify({
    Title = "Enjoy",
    Content = "Have Fun :)",
    Duration = 5,
    Image = 4483362458
})

local LobbyTab = Window:CreateTab("Lobby", 4483362458)
local Game1Tab = Window:CreateTab("Game-Map1", 4483362458)

---------Lobby----------
LobbyTab:CreateButton({
	Name = "✅ Nhập FULL Codes",
	Callback = function()
		local success, err = pcall(function()
			local codes = {
				"Release",
				"SorryForDelay",
				"SorryForShutdown",
				"50KActive",
				"1MVisits"
			}

			local player = game:GetService("Players").LocalPlayer
			local gui = player:WaitForChild("PlayerGui")
			local window = gui:WaitForChild("Window")
			local codesGui = window:WaitForChild("Codes")
			local codeFrame = codesGui:WaitForChild("Frame")
			local codeInputFrame = codeFrame:WaitForChild("code")
			local enterBox = codeInputFrame:WaitForChild("entercode")
			local redeemBtn = codeFrame:WaitForChild("redeem")

			-- Đảm bảo GUI hiện ra (Frame chứ không phải ScreenGui)
			codeFrame.Visible = true

			for _, code in ipairs(codes) do
				enterBox.Text = code
				redeemBtn:Activate()
				print("📨 Đã gửi code:", code)
				task.wait(1.2)
			end

			Rayfield:Notify({
				Title = "🎉 Xong rồi!",
				Content = "Đã thử nhập toàn bộ code qua GUI!",
				Duration = 5
			})
		end)

		if not success then
			warn("❌ Callback Error:", err)
			Rayfield:Notify({
				Title = "❌ Lỗi",
				Content = tostring(err),
				Duration = 5
			})
		end
	end
})

-----------Tab farm 1----------------
local autoFarm = false
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

local function getHRP()
	local char = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()
	return char:FindFirstChild("HumanoidRootPart")
end

local function getTargetMobs()
	local enemyFolder = workspace:WaitForChild("Enemy"):WaitForChild("Mob")
	local mobs = {}

	for _, mob in ipairs(enemyFolder:GetChildren()) do
		local name = mob.Name
		local hrp = mob:FindFirstChild("HumanoidRootPart")
		local hum = mob:FindFirstChild("Humanoid")
		if hrp and hum and hum.Health > 0 then
			if name == "Mist Ninja" or name == "Sand Ninja" then
				table.insert(mobs, mob)
			end
		end
	end

	return mobs
end

Game1Tab:CreateToggle({
	Name = "🌪Auto Farm",
	CurrentValue = false,
	Callback = function(Value)
		autoFarm = Value

		Rayfield:Notify({
			Title = autoFarm and "🟢 Auto Farm BẬT" or "🔴 Auto Farm TẮT",
			Content = autoFarm and "Đang farm map 1..." or "Đã dừng.",
			Duration = 3
		})

		task.spawn(function()
			while autoFarm do
				local mobs = getTargetMobs()

				if #mobs == 0 then
					task.wait(1)
				else
					for _, mob in ipairs(mobs) do
						if not autoFarm then break end

						local mobHRP = mob:FindFirstChild("HumanoidRootPart")
						local hrp = getHRP()

						if mobHRP and hrp then
							-- Bay đến gần đầu mob, cách 2.5 studs
							local targetPos = mobHRP.Position + Vector3.new(0, 2.5, 0)
							hrp.CFrame = CFrame.new(targetPos, mobHRP.Position)

							-- Đợi một tí để hitbox nhân vật chạm
							task.wait(0.2)

							-- Fire tấn công
							local atkRemote = ReplicatedStorage:FindFirstChild("Event") and ReplicatedStorage.Event:FindFirstChild("Attack")
							if atkRemote then
								atkRemote:FireServer(mob)
							end

							-- Đợi mob mất máu hoặc die mới tiếp tục
							local timeout = 0
							while mob:FindFirstChild("Humanoid") and mob.Humanoid.Health > 0 and timeout < 5 do
								task.wait(0.3)
								timeout += 0.3
							end
						end
					end
				end

				task.wait(0.5)
			end
		end)
	end
})
